<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_allpic"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/food"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/txt_allname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KFC"
            android:textColor="@color/txtcolor"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_allpic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/txt_allphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09988887"
            android:textColor="@color/txtcolor"
            app:layout_constraintTop_toBottomOf="@id/txt_allname"
            app:layout_constraintLeft_toLeftOf="@id/txt_allname"
            />
        <TextView
            android:id="@+id/txt_alladdress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="No.1073, Thanthumar Street, Ward 7, South Okkalapa Township, Yangon"
            android:textColor="@color/txtcolor"
            app:layout_constraintTop_toBottomOf="@id/txt_allphone"
            app:layout_constraintLeft_toLeftOf="@id/txt_allphone"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>